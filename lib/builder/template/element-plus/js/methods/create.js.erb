async <%=@method_name %>() {
    this.loading = true;
    if(this.validateForm()){
        const payload = this.<%= @options[:model][:name] %>
        const response = await api.post(`<%= @options[:model][:name].pluralize %>`, payload);
        this.$notify({
            title: '<%= @options[:model][:name] %>',
            message: response.data.message,
            quadrant: 'success',
        });
        this.resetForm();
        this.index();
    }
    this.loading = false;
},